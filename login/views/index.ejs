<html>
    <head>
        <meta charset="utf-8">
        <meta content="IE=edge" http-equiv="X-UA-Compatible">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    <body>
        <div class="container" style="width: 60%">
        <% if (!user) { %>
            <h2 class="text-center">Пожалуйста войдите</h2>
            <a class="btn btn-primary text-center" style="display: block;" href="/auth/vk" role="button">Войти с ВК</a>
        <% } else { %>
            <div class="card" style="text-align: center!important;">
                <div class="card-header">
                    <h3><%= user.displayName %></h3>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">ID: <%= user.id %></li>
                    <li class="list-group-item">Username: <%= user.username %></li>
                    <li class="list-group-item">Name: <%= user.displayName %></li>
                </ul>
            </div>
            <div>
                <div class="card-group" id="friends">
                    <% for (let i = 0; i < friends.length; i++) {%>
                    <div class="card m-3" style="text-align: center!important;">
                        <img src="<%= friends[i].photo_50 %>" class="card-img-top" alt="image">
                        <div class="card-body">
                            <h5 class="card-title"><%= friends[i].first_name + ' ' + friends[i].last_name%></h5>
                            <a href="https://vk.com/id<%= friends[i].id %>" class="btn btn-primary">Страница</a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            <a class="btn btn-danger" style="display: block" href="/logout" role="button">Выйти</a>
        <% } %>
        </div>
    </body>
</html>
